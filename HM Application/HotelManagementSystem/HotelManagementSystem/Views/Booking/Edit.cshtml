@model HMS.BAL.Models.BookingModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    a {
        color: black;
        text-decoration: none !important;
        font-weight:700;
    }
        a:hover {
            color: #DC3545;
        }
</style>

<div class="row pt-3 pb-4">
    <div class="col-lg-3 col-md-5">
        <div class="card border-0">
            <div class="card-body py-3 text-center h5 mb-0 text-danger font-weight-bold">Booking Confirmation</div>
        </div>
    </div>
</div>
@using (Html.BeginForm()){  
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.LabelFor(model => model.RoomNumber, htmlAttributes: new { @class = "control-label col-md-12 font-weight-bold" })
                            <div class="col-md-12 mt-2">
                                <span class="px-5 py-2 font-weight-bold text-danger" style=" box-shadow: 0px 1px 3px 0px #DC3545 !important;">@Model.RoomNumber</span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.fromDate, htmlAttributes: new { @class = "control-label col-md-12 font-weight-bold" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.fromDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.fromDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.To, htmlAttributes: new { @class = "control-label col-md-12 font-weight-bold" })
                            <div class="col-md-12">

                                @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-5 col-lg-4">
                                <input type="submit" value="Save" class="btn btn-danger font-weight-bold text-uppercase btn-block" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}

<div class="my-4">
    <i class="fa fa-arrow-left text-danger"></i> @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
